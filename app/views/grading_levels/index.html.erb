<div id="page-yield">

  <div class="container">
    <% unless flash[:notice].nil? %>
        <div class="row-fluid">
          <div class="span12">
            <div class="alert alert-info">
              <a data-dismiss="alert" class="close">Ã—</a>
              <strong> <%= flash[:notice]  %> </strong>
            </div>
          </div>
        </div>
    <% end %>
    <div class="row-fluid">
      <div class="span12">
    <div id="flash_box">
    </div>
      </div>
    </div>

    <% if permitted_to? :index, :course %>
        <div class="row-fluid">
          <div class="span12">
            <div class="mbox_toolbar clearfix">

               <%= link_to "<i class='icsw32-create-write'></i><span>#{t('course_text')}</span>".html_safe, courses_path %>

            </div>
          </div>

        </div>

    <% end %>
    <div class="row-fluid">
      <div class="span12">
        <div class="w-box w-box-blue">
          <div class="w-box-header">
            <h4><%= t('grading_levels_text') %></h4>
            <i class="pull-right icon-mail"></i>
          </div>
          <div class="w-box-content">
  <div class="box">
    <div class="label-field-pair">
      <label for="student_course"><%= t('batch') %>
        <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
      </label>
      <div class="text-input-bg">
        <%= select :batch, :id,
          @batches.map {|b| [b.full_name, b.id] },
          {:prompt => "#{t('common')}"},
          {:onchange => "#{remote_function(
          :url => { :action => 'show' },
          :with => "'batch_id='+value",
          :before => "$('#loader').show();",
          :success => "$('#loader').hide();"  )}"} %>
      </div></div>


    <div id="grading-levels" ><%= render :partial => "grading_levels" %></div>
    <div id="modal-box" style="display:none;"></div>


  </div>
